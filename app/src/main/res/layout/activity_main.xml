<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <WebView
                android:layout_width="346dp"
                android:layout_height="337dp" app:layout_row="3" app:layout_column="0" android:id="@+id/WebView1"/>
        <Button
                android:text="@string/Button1"
                android:layout_width="61dp"
                android:layout_height="66dp" android:id="@+id/button5" app:layout_row="1"
                app:layout_column="1" android:textColor="@color/Blue_300" android:background="@color/Blue_800"
                app:backgroundTint="@color/Blue_800"/>
        <TextView
                android:text="@string/textview1"
                android:layout_width="149dp"
                android:layout_height="128dp" android:id="@+id/textView4" app:layout_row="0" app:layout_column="0"
                android:gravity="center" android:textColor="@color/black" android:background="@color/Blue_700"
                android:textSize="18sp"/>
        <TextView
                android:text="@string/textview2"
                android:layout_width="150dp"
                android:layout_height="142dp" android:id="@+id/textView5" app:layout_row="1" app:layout_column="0"
                android:gravity="center" android:textColor="@color/black" android:background="@color/Blue_800"
                android:textSize="18sp"/>
        <TextView
                android:text="@string/textview3"
                android:layout_width="152dp"
                android:layout_height="125dp" android:id="@+id/textView8" app:layout_row="2" app:layout_column="0"
                android:gravity="center" android:textColor="@color/black" android:background="@color/Blue_900"
                android:textSize="18sp"/>
        <Button
                android:text="@string/Button1"
                android:layout_width="61dp"
                android:layout_height="70dp" android:id="@+id/button4" android:textColor="@color/Blue_400"
                android:background="@color/Blue_900" app:backgroundTint="@color/Blue_900"/>
        <ImageView
                android:layout_width="64dp"
                android:layout_height="126dp" app:srcCompat="@drawable/mywebviewer2"
                android:id="@+id/imageView" app:layout_row="0" app:layout_column="1"/>
    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>